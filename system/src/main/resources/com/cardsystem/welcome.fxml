<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cardsystem.WelcomeController">
    <children>
        <Label fx:id="welcomeLbl" text="Welcome" />
          <ListView fx:id="list_cards" layoutX="6.0" layoutY="70.0" onMouseClicked="#showCard" prefHeight="50.0" prefWidth="50.0" />
          <ImageView fx:id="img_card" fitHeight="150.0" fitWidth="200.0" layoutX="436.0" layoutY="151.0" pickOnBounds="true" preserveRatio="true" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
      
</VBox>
